{% extends '/security/login.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
    <img class="wave" src="{{ asset('img/wave.png') }}">
    <div class="container">
        <div class="img">
            <img src="{{ asset('img/bg.svg') }}">
        </div>
        <div class="login-content">
            <form class="form-login" method="post">

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h2 class="title">Register</h2>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                
                <div class="input-div one">
                    {{ form_row(registrationForm.Username, {'attr': {'placeholder': 'Username'}}) }}
                </div>
                
                <div class="input-div one">
                    {{ form_row(registrationForm.Email, {'attr': {'placeholder': 'Email'}}) }}
                </div>
                
                <div class="input-div one">
                    {{ form_row(registrationForm.Profile_picture, {'attr': {'placeholder': 'Profile Picture URL'}}) }}
                </div>
                
                <div class="input-div one">
                    {{ form_row(registrationForm.Profile_cover, {'attr': {'placeholder': 'Profile Cover URL'}}) }}
                </div>
                
                <div class="input-div one">
                    {{ form_row(registrationForm.plainPassword, {'attr': {'placeholder': 'Password'}}) }}
                </div>
                
                <div class="input-div one">
                    {{ form_row(registrationForm.RGPDConsent) }}
                </div>

                <button type="submit" class="btn btn-primary btn-lg">Register</button>
                
                {{ form_end(registrationForm) }}
            </form>
        </div>
    </div>
{% endblock %}

