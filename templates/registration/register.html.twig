{% extends '/security/login.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
    <img class="wave" src="{{ asset('img/wave.png') }}">
    <div class="container">
        <div class="img">
            <img src="{{ asset('img/bg.svg') }}">
        </div>
                <div class="login-content">
            <form class="form-login" method="post">

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <img src="{{ asset('img/logoconnect.png') }}">

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        {{ form_row(registrationForm.Username, {'attr': {'class': 'input', 'placeholder': 'Username'}}) }}
                    </div>
                </div>
                
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="div">
                        {{ form_row(registrationForm.Email, {'attr': {'class': 'input', 'placeholder': 'Email'}}) }}
                    </div>
                </div>
                
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-image"></i>
                    </div>
                    <div class="div">
                        {{ form_row(registrationForm.Profile_picture, {'attr': {'class': 'input', 'placeholder': 'Profile Picture URL'}}) }}
                    </div>
                </div>
                
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-image"></i>
                    </div>
                    <div class="div">
                        {{ form_row(registrationForm.Profile_cover, {'attr': {'class': 'input', 'placeholder': 'Profile Cover URL'}}) }}
                    </div>
                </div>
                
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'input', 'placeholder': 'Password'}}) }}
                    </div>
                </div>
                
                <div class="input-div one">
                    <div class="i">
                        <input type="checkbox" class="input" name="RGPDConsent" id="RGPDConsent" />
                    </div>
                    <div class="div">
                        <label for="RGPDConsent">I agree to the Terms and Privacy Policy</label>
                    </div>
                </div>
                
                <button type="submit" class="btn btn-primary btn-lg">Register</button>
                
                {{ form_end(registrationForm) }}
            </form>
        </div>
    </div>
{% endblock %}

