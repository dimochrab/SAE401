<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body>
<header>
    {% if app.user %}
        <nav class="logged-in-nav">
            <div class="logo">
            <a href="{{ path('app_utilisateur') }}">
            <img src="{{ asset('img/logoconnect.png') }}">
            </a>
            </div>
                <ul class="nav-links">
                    <li class="nav-item"><a href="{{path('app_modify_profile')}}">Modifier</a></li>
                    <li class="nav-item"><a href="{{path('app_publication')}}">Publier</a></li>
                    <li class="nav-item"><a href="{{path('app_utilisateur')}}">Profile</a></li>
                    <li class="nav-item"><a href="{{path('app_index')}}">Home</a></li>
                    <li class="nav-item"><a href="{{path('app_logout')}}">Déconnexion</a></li>
                </ul>
        </nav>
    {% else %}
        <nav class="logged-out-nav">
            <ul>
                <li class="nav-item"><a href="{{ path('app_index') }}">Home</a></li>
                <li class="nav-item"><a href="{{ path('app_login') }}">SIGNIn</a></li>
                <li class="nav-item"><a href="{{ path('app_register') }}">SIGNUp</a></li>
            </ul>
        </nav>
    {% endif %}
</header>

{% block body %}{% endblock %}
</body>
</html>
