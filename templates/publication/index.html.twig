{% extends 'base.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}
<img style="width: 100%" class="wave" src="{{ asset('img/wave.png') }}">
    <div class="popup">
        <div class="popup-content">
            <h1>Publier un Post</h1>
            {{ form_start(form, {'attr': {'class': 'publication-form'}}) }}
                <div class="form-group">
                    {{ form_row(form.post_type, {'attr': {'class': 'form-control', 'placeholder': 'Exprimez-vous...'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.file, {'attr': {'class': 'form-control-file'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Publier</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
