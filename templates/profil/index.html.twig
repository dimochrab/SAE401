{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.username }}{% endblock %}
{% block javascripts %}
<script>


</script>
{% endblock %}
{% block body %}
<h2>Profil de {{ user.username }}</h2>

<!-- Affichage des informations de l'utilisateur -->
<div>
{% if app.user and app.user.username != user.username %}
        {% if isFollowedByCurrentUser %}
            <form action="{{ path('unfollow_route', {'username': user.username}) }}" method="POST">
                <button type="submit">Ne plus suivre</button>
            </form>
        {% else %}
            <form action="{{ path('follow_route', {'username': user.username}) }}" method="POST">
                <button type="submit">Suivre</button>
            </form>
        {% endif %}
    {% endif %}

    <h2>Profil de l’utilisateur</h2>
        <p>Nombre d'abonnés : {{ followersCount }}</p>
        <p>Nombre d'abonnements : {{ followingsCount }}</p>
        <h2>Abonnés</h2>
<ul>
    {% for follower in followers %}
        <li>{{ follower.FollowerID.username }}</li>
    {% endfor %}
</ul>

<h2>Abonnements</h2>
<ul>
    {% for following in followings %}
        <li>{{ following.UserID.username }}</li>
    {% endfor %}
</ul>
        

    <p>Nom d'utilisateur: {{ user.username }}</p>
    <p>Bio: {{ user.Bio }}</p>
    <p>Email: {{ user.email }}</p>
            <img src="{{ asset('/uploads/' ~ user.ProfilePicture) }}" alt="Photo de profile">
        <img src="{{ asset('/uploads/' ~ user.ProfileCover) }}" alt="Photo de cover">

</div>

<!-- Affichage des publications de l'utilisateur -->
<section>
<h2>Publications</h2>
<div>
    {% for publication in publications %}
        <div>
            <p>{{ publication.dateTime|date('Y-m-d H:i') }}</p>
            <p>{{ publication.postType |e }}</p>

            {% if publication.fileType == 'image' %}
                <img src="{{ asset('uploads/' ~ publication.postContent) }}" alt="Publication">
            {% elseif publication.fileType == 'video' %}
                <video controls src="{{ asset('uploads/' ~ publication.postContent) }}"></video>
            {% endif %}
            <p>{{ publication.likesCount }} likes</p>
            <button data-publication-id="{{ publication.id }}" class="like-btn">J'aime</button>

            <div>
                {% for commentaire in publication.commentaires %}
                    <p>
                        <img src="{{ asset('uploads/' ~ commentaire.userID.profilePicture) }}" alt="Profil de {{ commentaire.userID.username |e }}" style="width: 25px;">
                        {{ commentaire.userID.username |e }}: {{ commentaire.content |e }}
                        <span style="font-size: 10px;">{{ commentaire.dateTime|date('Y-m-d H:i') }}</span>
                    </p>
                {% endfor %}
            </div>

            <form class="comment-form" data-publication-id="{{ publication.id }}" action="" method="post">
                <input type="text" name="content" placeholder="Ajoutez un commentaire..." required>
                <input type="hidden" name="publicationId" value="{{ publication.id }}">
                <button type="submit">Commenter</button>
            </form>
        </div>
    {% else %}
        <p>Cet utilisateur n'a pas encore publié de contenu.</p>
    {% endfor %}
</div>

</section>
{% endblock %}
